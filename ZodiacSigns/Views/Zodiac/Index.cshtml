@model Application.ViewModel.InformationViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="col-md-6 offset-3">
    <div class="card">
        <div class="card-header bg-card text-center text-white">
            Zodiac Signs
        </div>
        <div class="card-body">
            <form asp-action="Result" asp-controller="Zodiac" method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="Name">Name:</label>
                    <input type="text" name="Name" asp-for="Name" class="form-control" />
                    <label class="form-label" asp-for="BirthDate">Choose you Birth Day: </label>
                    <input type="date" name="BirthDate" asp-for="BirthDate" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">Find</button>
            </form>
        </div>
    </div>
</div>

